<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".HomeAdminFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refres"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/nav"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/bgblue"
        android:layout_height="160dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nama"
                android:layout_width="200dp"
                android:layout_gravity="center_vertical"
                android:text="Halo , Gabrial Fitrah Pradana"
                android:fontFamily="@font/popinssemibold"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:columnCount="3"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btnIzinAcara"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bgnotif"
                android:layout_columnWeight="1"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/ajukanAcara"
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="40dp"
                    android:text="19"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="50dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="10dp"
                    android:text="Izin acara"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bgnotif"
                android:layout_columnWeight="1"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/karyawanTerlambat"
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="40dp"
                    android:text="19"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="10dp"
                    android:text="Karyawan Terlambat"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnIzinAbsen"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bgnotif"
                android:layout_columnWeight="1"
                android:layout_height="90dp">

                <TextView
                    android:id="@+id/MengajukanAbsen"
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="40dp"
                    android:text="19"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="10dp"
                    android:text="Mengajukan Absen"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </GridLayout>


    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="20dp"
                android:src="@drawable/clock"
                android:layout_height="20dp"/>

        <TextView

            android:textColor="#616161"
            android:fontFamily="@font/popinssemibold"
            android:layout_width="wrap_content"
            android:text="Riwayat Hari Ini"
            android:layout_height="wrap_content"/>

        </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ryc"
        android:nestedScrollingEnabled="false"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>