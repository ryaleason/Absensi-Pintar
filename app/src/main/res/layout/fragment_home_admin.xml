<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeAdminFragment">

    <LinearLayout
        android:id="@+id/nav"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:background="@drawable/bgblue"
        android:layout_height="210dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_gravity="center_vertical"
                android:text="Halo , Gabrial Fitrah Pradana"
                android:fontFamily="@font/popinssemibold"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:columnCount="2"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bgnotif"
                android:layout_columnWeight="1"
                android:layout_height="90dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="40dp"
                    android:text="19"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="50dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="10dp"
                    android:text="Ajukan acara"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bgnotif"
                android:layout_columnWeight="1"
                android:layout_height="90dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="40dp"
                    android:text="19"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/birutua"
                    android:textSize="10dp"
                    android:text="Karyawan Terlambat"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </GridLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>