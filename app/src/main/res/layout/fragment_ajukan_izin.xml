<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgizin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjukanIzinFragment">




    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">






    <LinearLayout
        android:id="@+id/center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Pemintaan"
            android:fontFamily="@font/popinssemibold"
            android:textColor="@color/birutua"
            android:textSize="25dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/licensingtipisbiru"
            android:layout_height="30dp"/>

    </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Pengajuan Izin"
                android:fontFamily="@font/popinssemibold"
                android:textColor="@color/birutua"
                android:textSize="25dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/klickKamera"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="130dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Foto Bukti"
                android:textSize="20dp"
                android:fontFamily="@font/popinssemibold"
                android:textColor="#838383"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_marginLeft="12dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"/>
        </LinearLayout>

        <ImageView
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Name"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/birutua"
            app:boxStrokeColor="@color/birutua"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/EditTextNama"
                android:enabled="false"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:fontFamily="@font/popinmedium"
                android:drawableLeft="@drawable/userinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Date"
            android:layout_marginTop="10dp"
            app:hintTextColor="@color/birutua"
            app:boxStrokeColor="@color/birutua"
            app:boxBackgroundColor="@color/white"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/EditTextDate"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:fontFamily="@font/popinmedium"
                android:drawableLeft="@drawable/calendarinput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Alasan"
            android:textSize="18dp"
            android:textAlignment="center"
            android:drawablePadding="10dp"
            android:fontFamily="@font/popinssemibold"
            android:drawableRight="@drawable/peninput"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintTextColor="@color/birutua"
            app:boxStrokeColor="@color/birutua"
            app:counterEnabled="true"
            app:counterMaxLength="70"
            app:counterTextColor="@color/birutua"
            app:boxBackgroundColor="@color/white"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/alasan"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:maxLength="70"
                android:fontFamily="@font/popinmedium"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="50dp"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/birutua"
            app:cardElevation="5dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/ajukanIzin"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:text="Ajukan Izin"
                android:gravity="center"
                android:fontFamily="@font/popinssemibold"
                android:textSize="20dp"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/riwayatIzin"
            android:textColor="#ABABAB"
            android:layout_width="match_parent"
            android:text="Riwayat Izin"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:fontFamily="@font/popinssemibold"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>






</RelativeLayout>