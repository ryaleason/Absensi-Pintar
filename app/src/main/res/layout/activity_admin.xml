<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin">





    <RelativeLayout
        android:id="@+id/navbot"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="55dp">


        <GridLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:columnCount="3"
            android:layout_columnWeight="1"
            android:layout_height="match_parent">




            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/home"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/listview"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Home"

                    android:textColor="#A5A5A5"
                    android:textSize="10dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </GridLayout>

        <GridLayout
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:columnCount="3"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/listview"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ajukan Acara"
                    android:textColor="#999999"
                    android:textSize="8dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/costumer"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Profile"
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>


            </LinearLayout>







        </GridLayout>

        <GridLayout
            android:layout_alignParentStart="true"
            android:layout_gravity="end"
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:columnCount="3"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/home"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/listview"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Riwayat Absen"
                    android:textColor="#999999"
                    android:textSize="8dp"
                    android:fontFamily="@font/popinssemibold"
                    android:layout_height="wrap_content"/>


            </LinearLayout>







        </GridLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/bg"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:layout_width="73dp"
                    android:background="@drawable/fingerblue"
                    android:layout_height="73dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>