<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RiwayatAbsenFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refres"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_above="@+id/center"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Riwayat Absen"
                android:fontFamily="@font/popinssemibold"
                android:textColor="@color/birutua"
                android:textSize="25dp"
                android:layout_height="30dp"/>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/calender"
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/calendar"
                android:layout_height="30dp"/>
        </LinearLayout>



    </LinearLayout>
    <TextView
        android:id="@+id/tanggaLRiwayat"
        android:layout_width="wrap_content"
        android:text="Semua Riwayat"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:fontFamily="@font/popinssemibold"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/riwayat"
        android:layout_width="match_parent"
        android:background="@drawable/riwayat"
        android:gravity="center"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:layout_height="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#80256595"
            android:text="Tidak ada riwayat sebelumnya"
            android:fontFamily="@font/popinssemibold"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ryc"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>