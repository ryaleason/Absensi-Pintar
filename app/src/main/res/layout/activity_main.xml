<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/loadingscreen"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="39dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popinssemibold"
            android:text="Absensi Pintar"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="320dp"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/popinssemibold"
            android:text="Jangan lupa daftar hadirmu , absensi pintar siap membantumu !!"
            android:textColor="@color/white" />
    </LinearLayout>


    <TextView
        android:id="@+id/loding"
        android:layout_width="match_parent"
        android:layout_above="@+id/progress_container"
        android:text="Loading..."
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/popinmedium"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="130dp"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="#9D9D9D">

        <View
            android:id="@+id/progress_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="#FFFFFF" />
    </RelativeLayout>

</RelativeLayout>