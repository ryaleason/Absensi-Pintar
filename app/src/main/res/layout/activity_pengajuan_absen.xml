<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/bgizin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengajuanAbsen">

<!--    <LinearLayout-->
<!--        android:id="@+id/statusBar"-->
<!--        android:orientation="vertical"-->
<!--        android:background="@color/birutua"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="40dp"/>-->


    <LinearLayout
        android:id="@+id/back"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="30dp"
            android:src="@drawable/leftarow"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Kembali"
            android:textColor="@color/birutua"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/popinssemibold"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/klickKamera"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="130dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="Foto Selfi"
                android:textSize="20dp"
                android:fontFamily="@font/popinssemibold"
                android:textColor="#838383"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_marginLeft="12dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"/>
        </LinearLayout>

        <ImageView
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Name"
            android:enabled="false"
            app:boxBackgroundColor="@color/white"
            app:hintTextColor="@color/birutua"
            app:boxStrokeColor="@color/birutua"
            android:layout_height="wrap_content">

            <EditText
                android:enabled="false"
                android:id="@+id/EditTextNama"
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:fontFamily="@font/popinmedium"
                android:drawableLeft="@drawable/userinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Pilih Alasan"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:fontFamily="@font/popinssemibold"
            android:layout_height="wrap_content"/>

        <Spinner
            android:hapticFeedbackEnabled="true"
            android:popupBackground="@color/white"
            android:id="@+id/spinner_alasan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:outlineAmbientShadowColor="@color/birutua"
            android:background="@color/white"
            android:entries="@array/alasan_absen"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Keterangan"
            android:textSize="18dp"
            android:textAlignment="center"
            android:drawablePadding="10dp"
            android:fontFamily="@font/popinssemibold"
            android:drawableRight="@drawable/peninput"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:hintTextColor="@color/birutua"
            app:boxStrokeColor="@color/birutua"
            app:counterEnabled="true"
            app:counterMaxLength="70"
            app:counterTextColor="@color/birutua"
            app:boxBackgroundColor="@color/white"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="@color/black"
                android:drawablePadding="10dp"
                android:maxLength="70"
                android:fontFamily="@font/popinmedium"
                android:layout_width="match_parent"
                android:layout_height="90dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/popinssemibold"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:text="Submit"
            android:background="@color/birutua"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="50dp"/>
    </LinearLayout>
</RelativeLayout>
